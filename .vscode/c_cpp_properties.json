{
    "configurations": [
        {
            "name": "Linux", // 配置名称，表明这是针对 Linux 系统的设置
            "includePath": [ // 指定 IntelliSense 查找头文件的路径
                "${workspaceFolder}/**",
                "/opt/ros/humble/include/**"
            ],
            "defines": [], // 预处理器定义，用于条件编译等
            "compilerPath": "/usr/bin/gcc", // 指定编译器的路径，这里使用的是 GCC
            "compileCommands": "${workspaceFolder}/build/compile_commands.json", // 由 CMake 生成，并包含了编译单个文件所需的命令
            "cStandard": "c99", // 指定 C 语言标准
            "cppStandard": "c++17", // 指定 C++ 语言标准
            "intelliSenseMode": "linux-gcc-x64" // 设置 IntelliSense 的模式，这里配置为使用 GCC 在 64 位 Linux 系统上的设置
        }
    ],
    "version": 4
}
